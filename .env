# ===================================
# Configuration de l'application
# ===================================

# --------------------------------
# Paramètres du serveur
# --------------------------------
HOST=0.0.0.0
PORT=8000
DEBUG=True
ENVIRONMENT=development

# --------------------------------
# Base de données
# --------------------------------
DB_ENGINE=mysql+mysqlconnector
DB_USER=root
DB_PASSWORD=password
DB_HOST=localhost
DB_PORT=3306
DB_NAME=dmc_db
DB_CHARSET=utf8mb4

# --------------------------------
# Authentification JWT
# --------------------------------
JWT_SECRET_KEY=your-secret-key-here  # Changez pour une clé sécurisée en production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=10080  # 7 jours

# --------------------------------
# Configuration email
# --------------------------------
SMTP_SERVER=smtp.gmail.com  # ou votre fournisseur SMTP
SMTP_PORT=587
SMTP_USE_TLS=True
SMTP_USERNAME=hopitaldmc@gmail.com
SMTP_PASSWORD=
EMAIL_FROM=hopitaldmc@gmail.com
EMAIL_FROM_NAME="Clinique Medicale"

# --------------------------------
# Téléchargement de fichiers
# --------------------------------
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760  # 10MB
ALLOWED_EXTENSIONS=.jpg,.jpeg,.png,.pdf,.doc,.docx

# --------------------------------
# Sécurité CORS
# --------------------------------
CORS_ORIGINS=*
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=*

# --------------------------------
# Configuration OpenAI
# --------------------------------
OPENAI_API_KEY=
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=1000

# --------------------------------
# Paramètres de l'application
# --------------------------------
APP_NAME="Hopi Medical"
APP_DESCRIPTION="Application de gestion médicale"
APP_VERSION=1.0.0
CONTACT_EMAIL=contact@votredomaine.com
SUPPORT_EMAIL=support@votredomaine.com
